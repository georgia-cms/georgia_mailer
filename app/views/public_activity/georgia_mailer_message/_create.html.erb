<% if activity.trackable and !activity.trackable.spam %>
  <div id='activity_<%= activity.id %>' class="activity media">
    <%= image_tag(avatar_url(activity.trackable.email), alt: '', class: 'media-object pull-left') %>
    <div class="media-body">
      <h4 class="media-heading">
        <%= activity.trackable.name %> posted a new message <em><%= link_to activity.trackable.subject, activity.trackable %></em>
      </h4>
      <p>
        <small>
          <time class='text-muted js-time-ago' datetime="<%= activity.created_at %>">
            About <%= time_ago_in_words(activity.created_at) %> ago
          </time>
        </small>
      </p>
    </div>
  </div>
<% end -%>